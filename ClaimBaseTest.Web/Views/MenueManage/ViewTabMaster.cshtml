                                            <tr>
                                                @*<td class="text-center">@count</td>*@
                                                <td>
                                                    <input class="cboxDELclass form-check-input" id="cboxDELclass" type="checkbox" name="chkbox" value="@list.TABID" />
                                                </td>
                                                <td>
